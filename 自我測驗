#include<iostream>
using namespace std;
int main()
{
  char ch1,ch2;
  ch1='a'; ch2='B';							
  printf("ch1=%c,ch2=%c\n",ch1-32,ch2+32);		
  printf("ch1+10=%d\n", ch1+10);
  printf("ch1+10=%c\n", ch1+10);
  printf("ch2+10=%d\n", ch2+10);
  printf("ch2+10=%c\n", ch2+10);
  return 0;
}
=========================================
#include<iostream>
using namespace std;
int main()
{
	int i=5,j=8,k=12,l=4,x1,x2;
	x1=i>j&&k>l;
	x2=!(i>j)&&k>l;
	printf("%d,%d\n",x1,x2);
  return 0;
}
=========================================
Question:x1,x2的值為多少? why?
